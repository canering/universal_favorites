
{
  "manifest_version": 2,
  "name": "Favorites Bar",
  "author": "Zachary Karamanlis",
  "version": "1.0",
  "description": "Favorites bar that sync to a file",
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "https://www.googleapis.com/auth/drive.file",
    "tabs"
  ],
  "icons": {
    "16":"icon-16.png",
    "48":"icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistant":false
  },
  "oauth2": {
    "client_id": "560940426128-giooumtobj8eapjg89o8q5r718c4hb2s.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.file"
    ]
  }
}